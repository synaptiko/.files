# include ~/.config/sway/config.d/*

input "2:14:ETPS/2_Elantech_Touchpad" {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

input * {
	xkb_layout us
	xkb_model pc105
	xkb_options compose:ralt,caps:escape
}
